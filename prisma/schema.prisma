datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum PaymentStatus {
  PENDING      // COD orders start as pending, UPI orders waiting for Razorpay response
  PAID         // Successfully paid via UPI/Card
  FAILED       // Payment failed (UPI/Card rejected by Razorpay)
  REFUNDED     // Payment refunded
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  role      String
  addresses Address[]
  reviews   Review[]
  clerkId   String    @unique
}

model Address {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  user      User    @relation(fields: [userId], references: [id])
  userId    String  @db.ObjectId
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  phone     String
  isDefault Boolean @default(false)
  orders    Order[]
}

model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String
  price           Float
  discountedPrice Float?
  sku             String   @unique
  stock           Int
  images          String[]
  categories      String[]
  featured        Boolean  @default(false)
  specifications  Json?    // Stores structured data like quantity, ingredients, how to use
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  OrderProduct  OrderProduct[]
  ProductFAQ    ProductFAQ[]
  BundleItems   BundleItem[]
  reviews       Review[]
}

model FAQ {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  question String
  answer   String

  ProductFAQ ProductFAQ[]
}

model ProductFAQ {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId
  faq       FAQ     @relation(fields: [faqId], references: [id])
  faqId     String  @db.ObjectId
}

model Order {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  userId           String         @db.ObjectId
  shippingAddressId String?       @db.ObjectId
  shippingAddress  Address?       @relation(fields: [shippingAddressId], references: [id])
  products         OrderProduct[]
  total            Float
  status           String // "pending" | "paid" | "confirmed" | "failed" | "refund_pending" | "refunded" | "cancelled" | "processing" | "shipped" | "delivered"
  razorpayOrderId  String? // Razorpay order_id for tracking
  razorpayPaymentId String? // Razorpay payment_id after successful payment
  paymentMethod    String? // "upi" | "cod" | "card" | "netbanking"
  paymentStatus    PaymentStatus @default(PENDING) // COD starts PENDING, UPI updates based on Razorpay response
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([razorpayOrderId])
  @@index([status])
}

model OrderProduct {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId
  quantity  Int
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int // 1-5 stars
  comment   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  productId String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
}

model Bundle {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  bundleType    String       // "combo" | "fixed_discount" | "bogo"
  isActive      Boolean      @default(true)
  validFrom     DateTime     @default(now())
  validUntil    DateTime?
  
  // Pricing fields
  normalPrice   Float        // Sum of individual product prices
  offerPrice    Float        // The price when bundle is applied
  savings       Float        // normalPrice - offerPrice (auto-calculated)
  
  items         BundleItem[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([isActive])
  @@index([bundleType])
}

model BundleItem {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  bundle     Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  bundleId   String   @db.ObjectId
  product    Product  @relation(fields: [productId], references: [id])
  productId  String   @db.ObjectId
  quantity   Int      @default(1)
  isRequired Boolean  @default(true)  // required for combo/BOGO, optional for fixed discount
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([bundleId, productId])
  @@index([productId])
  @@index([bundleId])
}

